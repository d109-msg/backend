<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
        namespace="com.ssafy.msg.notification.model.mapper.NotificationMapper">

    <select id="getNicknameById" parameterType="int"
            resultType="String">
        select nickname
        from users
        where id = #{fromId};
    </select>

    <select id="getUserIdByArticleId" parameterType="int"
            resultType="int">
        select user_id
        from articles
        where id = #{articleId};
    </select>

    <select id="getUserIdByCommentId" parameterType="int"
            resultType="int">
        select user_id
        from comments
        where id = #{commentId};
    </select>
</mapper>

